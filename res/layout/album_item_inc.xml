<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/album_art"
        android:contentDescription="@+string/desc_album_art"
        android:paddingRight="3dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/album_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/album_art" />

    <TextView
        android:id="@+id/album_artist"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_name"
        android:layout_toRightOf="@+id/album_art" />

    <TextView
        android:id="@+id/album_track_count"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_artist"
        android:layout_toRightOf="@+id/album_art" />

    <TextView
        android:id="@+id/label_track_count"
        android:text="@+string/label_track_count"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_artist"
        android:layout_toRightOf="@+id/album_track_count" />

</merge>
